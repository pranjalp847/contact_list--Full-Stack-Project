<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/b806d8ba1a.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container">
        <div>
            <h1>
                <span><i class="fas fa-address-book"></i></span>
                <span> Contact - List </span>
            </h1>
        </div>

        <div id="list-border">
            <ul>
                <% for(let i of contact_List) { %>
                    <li>
                        <div id="details">
                            <p>
                                <%= i.name %>
                            </p>
                            <p>
                                <%= i.phone %>
                            </p>
                        </div>
                        <div>
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </li>
                    <% } %>
            </ul>

        </div>
        <div class="form">
            <form action="practice" method="post">

                <input id="input-name" type="text" name="name" placeholder="Enter name">
                <br>
                <input id="input-number" type="number" name="phone" placeholder="Enter number">
                <br>
                <button id="button-submit" type="submit"> Add contact </button>
            </form>
        </div>
    </div>


    <script src="/js/home.js"></script>
</body>

</html>